execute pathogen#infect()

filetype on

filetype plugin indent on

syntax on

set nocompatible

set tabstop=4

set shiftwidth=4

set softtabstop=4

set expandtab

set number 

set relativenumber

set ruler

set encoding=utf-8

set laststatus=2

set backspace=2

set textwidth=80

set wrap

set linebreak

set fo+=t

set colorcolumn=+1

highlight ColorColumn ctermbg=darkgray

nmap <NL> i<CR><ESC>

set list

set listchars=eol:$,tab:>-,trail:~,extends:>,precedes:<

let g:DoxygenToolkit_authorName="Fernando Cesar"

set hlsearch
